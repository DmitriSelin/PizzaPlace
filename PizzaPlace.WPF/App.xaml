<Application x:Class="PizzaPlace.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PizzaPlace.WPF"
             StartupUri="Views/Windows/MainWindow.xaml"
             xmlns:vm="clr-namespace:PizzaPlace.WPF.ViewModels">
    <Application.Resources>
        <ResourceDictionary>
            
            <vm:ViewModelLocator x:Key="Locator"/>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/ImageStyle.xaml"/>
                <ResourceDictionary Source="Resources/Styles/TextBlockStyle.xaml"/>
                <ResourceDictionary Source="Resources/Styles/TextBoxStyle.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ListBoxStyle.xaml"/>
                <ResourceDictionary Source="Resources/Styles/BorderStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>