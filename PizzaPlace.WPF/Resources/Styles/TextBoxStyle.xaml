<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="LoginStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="MaxLength" Value="40"/>
    </Style>

    <Style x:Key="PasswordStyle" TargetType="PasswordBox">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#2C3045"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignRevealPasswordBox}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MaxLength" Value="30"/>
        <Setter Property="PasswordBox.SelectionBrush" Value="{DynamicResource DefaultBlueColor}"/>
        <Setter Property="Background" Value="{DynamicResource LightGrayBrush}"/>
        <Setter Property="Padding" Value="0, 0, 15, 0"/>
    </Style>
</ResourceDictionary>